<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#748aa7"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    
    <ScrollView
	    android:layout_weight="1"	 
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent" >
    	
    	<LinearLayout
    		android:padding="10dp"
    		android:orientation="vertical" 
    		android:layout_width="fill_parent"
    		android:layout_height="fill_parent" >
    		
    		<!-- 입력,삭제,수정 모드 확인하는 제목 -->
    		<RelativeLayout
    			android:layout_width="fill_parent"
	    		android:layout_height="@dimen/height_plan_subject" >
    			
    			<TextView
	    			android:id="@+id/tv_title"
	    			android:gravity="center"
	    			android:textStyle="bold"
	    			android:layout_centerInParent="true"
	    			android:textColor="@color/font_plan_setting"
	    			android:textSize="@dimen/font_plan_setting"
	    			android:layout_width="fill_parent"
		    		android:layout_height="fill_parent" />
		    		
	    		<Button 
	    			android:id="@+id/btn_edit"
	    			android:text="Edit"
	    			android:paddingRight="15dp"
	    			android:layout_centerVertical="true"
	    			android:layout_alignParentRight="true"
	    			android:layout_width="wrap_content"
		    		android:layout_height="wrap_content" />
	    		
    		</RelativeLayout>
    		
	    		
    		<!-- Subject -->
    		<LinearLayout
    			android:paddingTop="@dimen/padding_plan_layout"
    			android:orientation="horizontal"
    			android:layout_width="fill_parent"
	    		android:layout_height="wrap_content" >
    			
    			<TextView
    				android:textColor="@color/font_plan_setting"
    				android:textSize="@dimen/font_plan_setting"
    				android:gravity="center"
    				android:layout_weight="5"
	    			android:text="@string/plan_subject"
		    		android:layout_width="fill_parent"
		    		android:layout_height="fill_parent"  />
		    	<EditText 
		    		android:id="@+id/ed_subject"
		    		android:hint="@string/hint_plan_subject"
		    		android:layout_weight="2"
		    		android:singleLine="true"
		    		android:layout_width="fill_parent"
		    		android:layout_height="fill_parent"  />
    		</LinearLayout>
    		
    		<!-- Location -->
    		<LinearLayout
    			android:paddingTop="@dimen/padding_plan_layout"
    			android:orientation="horizontal"
    			android:layout_width="fill_parent"
	    		android:layout_height="wrap_content" >
    			
    			<TextView
    				android:textColor="@color/font_plan_setting"
    				android:textSize="@dimen/font_plan_setting"
    				android:gravity="center"
    				android:layout_weight="5"
	    			android:text="@string/plan_location"
		    		android:layout_width="fill_parent"
		    		android:layout_height="fill_parent"  />
		    	<EditText 
		    		android:id="@+id/ed_location"
		    		android:hint="@string/hint_plan_location"
		    		android:layout_weight="2"
		    		android:singleLine="true"
		    		android:layout_width="fill_parent"
		    		android:layout_height="fill_parent"  />
    		</LinearLayout>
    		
    		<!-- Start Date -->
    		<LinearLayout
    			android:paddingTop="@dimen/padding_plan_layout"
    			android:orientation="horizontal"
    			android:layout_width="fill_parent"
	    		android:layout_height="wrap_content" >
    			
    			<TextView
    				android:textColor="@color/font_plan_setting"
    				android:textSize="@dimen/font_plan_setting"
    				android:gravity="center"
    				android:layout_weight="5"
	    			android:text="@string/plan_startdate"
		    		android:layout_width="fill_parent"
		    		android:layout_height="fill_parent"  />
		    		
		    	<LinearLayout
		    		android:orientation="horizontal"
		    		android:layout_weight="2"
		    		android:layout_width="fill_parent"
		    		android:layout_height="fill_parent" >
		    		
		    		<Button 
			    		android:id="@+id/btn_startdate_year"
			    		android:textSize="@dimen/font_plan_setting"
			    		android:layout_weight="2"
			    		android:layout_width="fill_parent"
			    		android:layout_height="fill_parent"  />
			    	
			    	<Button 
			    		android:id="@+id/btn_startdate_hour"
			    		android:textSize="@dimen/font_plan_setting"
			    		android:layout_weight="3"
			    		android:layout_width="fill_parent"
			    		android:layout_height="fill_parent"  />
		    		
		    	</LinearLayout>
		    	
    		</LinearLayout>
    		
    		<!-- End Date -->
    		<LinearLayout
    			android:paddingTop="@dimen/padding_plan_layout"
    			android:orientation="horizontal"
    			android:layout_width="fill_parent"
	    		android:layout_height="wrap_content" >
    			
    			<TextView
    				android:textColor="@color/font_plan_setting"
    				android:textSize="@dimen/font_plan_setting"
    				android:gravity="center"
    				android:layout_weight="5"
	    			android:text="@string/plan_enddate"
		    		android:layout_width="fill_parent"
		    		android:layout_height="fill_parent"  />
		    		
		    	<LinearLayout
		    		android:orientation="horizontal"
		    		android:layout_weight="2"
		    		android:layout_width="fill_parent"
		    		android:layout_height="fill_parent" >
		    		
		    		<Button 
			    		android:id="@+id/btn_enddate_year"
			    		android:textSize="@dimen/font_plan_setting"
			    		android:layout_weight="2"
			    		android:layout_width="fill_parent"
			    		android:layout_height="fill_parent"  />
			    	
			    	<Button 
			    		android:id="@+id/btn_enddate_hour"
			    		android:textSize="@dimen/font_plan_setting"
			    		android:layout_weight="3"
			    		android:layout_width="fill_parent"
			    		android:layout_height="fill_parent"  />
		    		
		    	</LinearLayout>
		    	
    		</LinearLayout>
    		
    		<!-- Alarm -->
    		<LinearLayout
    			android:paddingTop="@dimen/padding_plan_layout"
    			android:orientation="horizontal"
    			android:layout_width="fill_parent"
	    		android:layout_height="wrap_content" >
    			
    			<TextView
    				android:textColor="@color/font_plan_setting"
    				android:textSize="@dimen/font_plan_setting"
    				android:gravity="center"
    				android:layout_weight="5"
	    			android:text="@string/plan_alarm"
		    		android:layout_width="fill_parent"
		    		android:layout_height="fill_parent"  />
		    	<Spinner 
		    		android:id="@+id/sp_alarm"
		    		android:layout_weight="2"
		    		android:layout_width="fill_parent"
		    		android:layout_height="fill_parent"  />
    		</LinearLayout>
    		
    		<!-- Repeat -->
    		<LinearLayout
    			android:paddingTop="@dimen/padding_plan_layout"
    			android:orientation="horizontal"
    			android:layout_width="fill_parent"
	    		android:layout_height="wrap_content" >
    			
    			<TextView
    				android:textColor="@color/font_plan_setting"
    				android:textSize="@dimen/font_plan_setting"
    				android:gravity="center"
    				android:layout_weight="5"
	    			android:text="@string/plan_repeat"
		    		android:layout_width="fill_parent"
		    		android:layout_height="fill_parent"  />
		    	<Spinner 
		    		android:id="@+id/sp_repeat"
		    		android:layout_weight="2"
		    		android:layout_width="fill_parent"
		    		android:layout_height="fill_parent"  />
    		</LinearLayout>
    		
    		<!-- Vibrate -->
    		<LinearLayout
    			android:paddingTop="@dimen/padding_plan_layout"
    			android:orientation="horizontal"
    			android:layout_width="fill_parent"
	    		android:layout_height="wrap_content" >
    			
    			<TextView
    				android:textColor="@color/font_plan_setting"
    				android:textSize="@dimen/font_plan_setting"
    				android:gravity="center"
    				android:layout_weight="5"
	    			android:text="@string/plan_vibrate"
		    		android:layout_width="fill_parent"
		    		android:layout_height="fill_parent"  />
		    	<Spinner 
		    		android:id="@+id/sp_vibrate"
		    		android:layout_weight="2"
		    		android:layout_width="fill_parent"
		    		android:layout_height="fill_parent"  />
    		</LinearLayout>
    		
    		<!-- Vibrate -->
    		<LinearLayout
    			android:paddingTop="@dimen/padding_plan_layout"
    			android:orientation="horizontal"
    			android:layout_width="fill_parent"
	    		android:layout_height="wrap_content" >
    			
    			<TextView
    				android:textColor="@color/font_plan_setting"
    				android:textSize="@dimen/font_plan_setting"
    				android:gravity="center"
    				android:layout_weight="5"
	    			android:text="@string/plan_memo"
		    		android:layout_width="fill_parent"
		    		android:layout_height="fill_parent"  />
		    	<LinearLayout 
		    		android:layout_weight="2"
		    		android:layout_width="fill_parent"
		    		android:layout_height="fill_parent"  />
    		</LinearLayout>
    		
    		<EditText 
    			android:id="@+id/ed_memo"
    			android:paddingTop="@dimen/padding_plan_layout"
    			android:hint="@string/hint_plan_memo"
    			android:minLines="4"
    			android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"  />	

    	</LinearLayout>
    </ScrollView>
    
    <Button 
    	android:textSize="@dimen/font_plan_setting"
    	android:layout_weight="7"
    	android:id="@+id/btn_commit"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent" />
    	
</LinearLayout>
